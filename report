            </div>
            <h3 class="text-2xl font-bold text-white">Thank you for your help!</h3>
            <p class="text-slate-400 mt-2 max-w-sm mx-auto">The dev team will be in touch shortly regarding your report.</p>
            <button id="resetBtn" class="mt-8 text-sky-400 font-semibold hover:text-sky-300 transition-colors flex items-center justify-center mx-auto gap-2">
                <i class="fas fa-plus"></i>Create New Entry
            </button>
        </div>
    </div>

    <script>
        const form = document.getElementById('devReportForm');
        const successSection = document.getElementById('success');
        const submitBtn = document.getElementById('submitBtn');
        const resetBtn = document.getElementById('resetBtn');

        // Handle Form Submission
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const originalBtnText = submitBtn.innerHTML;
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-circle-notch fa-spin"></i> Syncing...';

            const formData = new FormData(form);
            const data = Object.fromEntries(formData);

            fetch('https://api.web3forms.com/submit', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' },
                body: JSON.stringify(data)
            })
            .then(res => {
                if (res.status === 200) {
                    form.classList.add('hidden');
                    successSection.classList.remove('hidden');
                } else {
                    throw new Error("Log transmission failed.");
                }
            })
            .catch(err => {
                alert(err.message || "Network timeout.");
            })
            .finally(() => {
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalBtnText;
            });
        });

        // Handle Reset/New Entry (Fixed button logic)
        resetBtn.addEventListener('click', function() {
            form.reset(); // Clear input values
            successSection.classList.add('hidden'); // Hide success message
            form.classList.remove('hidden'); // Show form again
        });
    </script>
