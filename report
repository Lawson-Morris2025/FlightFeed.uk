        <!-- Success Message -->
        <div id="success" class="hidden p-12 text-center">
            <div class="w-20 h-20 bg-emerald-500/10 text-emerald-400 rounded-full flex items-center justify-center mx-auto mb-6 border border-emerald-500/20">
